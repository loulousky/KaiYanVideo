<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fl_change"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        tl:tl_iconGravity="TOP"
        tl:tl_iconHeight="38dp"
        tl:tl_iconMargin="5dp"
        tl:tl_iconWidth="38dp"
        tl:tl_indicator_bounce_enable="true"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="#000000"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_textsize="12sp" />

</RelativeLayout>
